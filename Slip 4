Slip-4
Q1-
#include <stdio.h>
#include <dirent.h>
#include <string.h>

int main(int argc, char *argv[]) {
    DIR *d;
    struct dirent *dir;

    if (argc < 2) {
        printf("Usage: %s <file1> <file2> ...\n", argv[0]);
        return 0;
    }

    for (int i = 1; i < argc; i++) {
        int found = 0;
        d = opendir(".");

        while ((dir = readdir(d)) != NULL) {
            if (strcmp(dir->d_name, argv[i]) == 0) {
                found = 1;
                break;
            }
        }

        closedir(d);

        if (found)
            printf("%s --> FOUND\n", argv[i]);
        else
            printf("%s --> NOT FOUND\n", argv[i]);
    }

    return 0;
}
Q2-
#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <signal.h>

void handler(int sig) {
    if (sig == SIGHUP)
        printf("Child: Received SIGHUP\n");
    else if (sig == SIGINT)
        printf("Child: Received SIGINT\n");
    else if (sig == SIGQUIT) {
        printf("My Papa has Killed me!!!\n");
        exit(0);
    }
}

int main() {
    int pid = fork();

    if (pid == 0) {     // CHILD
        signal(SIGHUP, handler);
        signal(SIGINT, handler);
        signal(SIGQUIT, handler);

        while (1)
            pause();   // Wait for signals
    }
    else {             // PARENT
        sleep(1);

        for (int i = 1; i <= 5; i++) {
            if (i % 2 == 1)
                kill(pid, SIGHUP);
            else
                kill(pid, SIGINT);

            sleep(3);
        }

        kill(pid, SIGQUIT);
    }

    return 0;
}
