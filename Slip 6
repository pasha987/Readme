db.policies.find({ policy_name: "Komal Jeevan" })
db.customers.find(
    { policy_id: 101 }
)
db.customers.aggregate([
    { $group: { _id: null, avgPremium: { $avg: "$premium_amount" } } }
])
db.customers.updateMany(
    { premium_type: "Monthly" },
    [
        { $set: { premium_amount: { $multiply: ["$premium_amount", 1.05] } } }
    ]
)
db.customers.countDocuments({ premium_type: "Half Yearly" })
